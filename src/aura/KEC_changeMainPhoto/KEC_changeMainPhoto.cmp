<aura:component description="KEC_changeMainPhoto" implements="force:appHostable,flexipage:availableForAllPageTypes, force:hasRecordId" controller="KEC_AddProductController">
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="photos" type="List" />
    <aura:attribute name="mainPhotoUrl" type="String" />
    <aura:attribute name="mainPhotoIndex" type="Integer" />

    <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>

    <div class="slds-card">
        <h2>{!$Label.c.KEC_ChangeMainPhoto}</h2>

        <aura:iteration items="{!v.photos}" var="photo" indexVar="index" >
            <img src="{!photo.ImgUrl__c}" width="100" height="200" data-id="{!index}" aura:id="productImg"/>
        </aura:iteration>
    </div>
    <c:KEC_toastHandler aura:id="toastCmp" />
</aura:component>
